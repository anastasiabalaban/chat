<h3 class='text-center text-info mt-3'>Create article</h3>
<div class='col-md-6 mx-auto'>
  <%= form_for :article, url: articles_path do |form| %>
    <div class='form-group'>
      <%= form.label :title %><br>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= form.label :text %><br>
      <%= form.text_area :text, rows: 5, class: 'form-control' %>
    </div>

      <%= form.submit 'Create', class: 'btn btn-outline-info mb-2' %>
  <% end %>

  <%= link_to 'Back', articles_path, class: 'btn btn-light' %>
</div>
